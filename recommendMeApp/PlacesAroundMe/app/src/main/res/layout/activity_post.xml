<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abhi.placesaroundme.PostActivity"
    android:id="@+id/post"
    android:background="@drawable/background1">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txt_post_writeabout"
        android:text="Write about your Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txt_post_category"
        android:text="Category :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_post_writeabout"/>

    <Spinner
        android:layout_marginTop="30dp"
        android:id="@+id/spinner_post_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_post_category"
        android:entries="@array/category"
        android:background="#d9deff" />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/txt_post_enter"
        android:text="Enter your message :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_post_category"/>

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/edit_post_description"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/txt_post_enter"
        android:background="#FFFFFF"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_post_post"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_post_description"
        android:text="Post"/>


</RelativeLayout>
