<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abhi.placesaroundme.MyTabActivity"
    android:background="@drawable/background1">

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/button_mytab_post"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Post Your Experience"/>
    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/button_mytab_map"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="check Places Around "
        android:layout_below="@+id/button_mytab_post"/>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/button_mytab_setting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_below="@+id/button_mytab_map"/>
    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/button_mytab_signOut"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign_out "
        android:layout_below="@+id/button_mytab_setting"/>

</RelativeLayout>
