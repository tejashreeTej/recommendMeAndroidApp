<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.abhi.placesaroundme.DetailActivity"
    android:id="@+id/Detail"
    android:background="@drawable/background1">

    <TextView
        android:id="@+id/text_Detail_Title"
        android:text="Reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="normal"
        android:textSize="34dp"
        android:textColor="#ff1496"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/text_Detail_Msg"
        android:text="This place is nice. you should visit." android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textColor="#2c14ff"
        android:typeface="monospace"
        android:textSize="16dp"
        android:layout_below="@+id/text_Detail_Title"
        android:background="#FFFFFF"/>

</RelativeLayout>
